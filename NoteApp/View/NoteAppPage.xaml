<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:NoteApp.Model"
             x:Class="NoteApp.View.NoteAppPage">
    <!-- 
        If We want to use a shortcut name we con do like above with
            xmlns:model="clr-namespace:NoteApp.Model"
        In the code below, write model:Note instead of NoteApp.Model.Note
    -->

    <VerticalStackLayout>
        <Label 
            Text="Welcome to NoteApp"
            FontSize="32"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ScrollView>
            <CollectionView>
                <!-- This Item Source will be removed in mvvm, now its only for understand the concept-->
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type model:Note}">
                        <model:Note Title="Note 1" Content="Description 1" Category="Random" Date="Saturday, June 14, 2014 6:32 AM"  State="Active"/>
                        <model:Note Title="Note 2" Content="Description 2" Category="Random" Date="Saturday, June 14, 2014 6:32 AM"  State="Active"/>
                        <model:Note Title="Note 3" Content="Description 3" Category="Random" Date="Saturday, June 14, 2014 6:32 AM"  State="Active"/>
                    </x:Array>
                </CollectionView.ItemsSource>
                
                <!-- This tell how a single data (of type Note) will be presented-->
                <CollectionView.ItemsLayout>
                    <DataTemplate x:DataType="model:Note">
                        
                        
                    </DataTemplate>
                </CollectionView.ItemsLayout>
            </CollectionView>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>